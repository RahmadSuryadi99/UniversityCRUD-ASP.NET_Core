@using IGLOUniversity.ViewModel.User;
@model LoginViewModel;


@{
    Layout = "_Autentikasi";
}

<div class="content">
    <div class="title-form">
        <div>IGLO </div>University
    </div>
    <div class="container">
        <h class="wrapper-signinText">
            Sign in
        </h>
        <div class="wrapper">
            <form method="post" asp-action="Login" asp-controller="User" asp-route-returnUrl="@ViewBag.ReturnUrl">
                <div class="wrapper-input">
                    <input type="text" placeholder="username" asp-for="Username">
                    <input type="password" placeholder="password" asp-for="Password">

                </div>
                <div class="wrapp-button">
                    <button type="submit">SIGN IN</button>

                </div>
            </form>
        </div>
    </div>
</div>
<link rel="stylesheet" href="~/style.css" />